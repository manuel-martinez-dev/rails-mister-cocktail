<div class="grid-cards m-5">
  <div class="container">
  <div class="row">
    <div class="col-12">
  <p><%= link_to 'Kriation!', new_cocktail_path, class: 'btn btn-outline-primary'%></p>
  </div>
    <div class="row">
      <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-sm-12 col-md-6 col-lg-6">
        <div class="m-2">
          <%= link_to cocktail_path(cocktail) do %>
          <% unless cocktail.photo.file.nil? %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>')">
            <% else %>
            <div class="card-category">
              <% end %>
              <%= cocktail.name %>
            </div>
            <% end %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  </div>
</div>
