<div class="container mt-4">
<h1><%= @cocktail.name %></h1>

<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
<div class="row">
<p><%= link_to 'destroy COCKtail', cocktail_path(@cocktail), class: 'btn btn-danger mt-3', method: :delete %></p>
<div class="container mt-4">
<% @cocktail.doses.each do |dose| %>
  <ul>
    <li><%= dose.ingredient["name"] %>: <%= dose.description %>
    <%= link_to dose_path(dose), method: :delete do %> | <i class="fas fa-trash-alt"></i><% end %></li>
  </ul>
<% end %>
<%= link_to new_cocktail_dose_path(@cocktail), class: 'btn btn-success mt-3' do %><%= 'Add duh!se' %> <i class="fas fa-plus-square"></i><% end %>
<p><%= link_to 'Finished?', cocktails_path, class: 'btn btn-warning mt-3' %></p>
</div>


